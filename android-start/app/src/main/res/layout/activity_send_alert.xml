<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_alert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.firebase.codelab.friendlychat.SendAlertActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/textViewTitle" />

    <Button
        android:text="NATURAL DISASTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDisaster"
        android:layout_below="@+id/buttonAssault"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <Button
        android:text="SAFE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSafe"
        android:layout_below="@+id/buttonDisaster"
        android:layout_alignLeft="@+id/buttonAssault"
        android:layout_alignStart="@+id/buttonAssault"
        android:layout_marginTop="28dp" />

    <Button
        android:text="ACCIDENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/buttonAccident"
        tools:text="Accident"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="ASSAULT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAssault"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/buttonAccident"
        android:layout_alignLeft="@+id/buttonAccident"
        android:layout_alignStart="@+id/buttonAccident" />
</RelativeLayout>
